{
    "compilerOptions": {
      "lib": [
        "es5",
        "es6",
        "dom",
        "dom.iterable"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "target": "es6",
      "resolveJsonModule": true,
      "baseUrl": "./",
      "outDir": "./dist",
      "esModuleInterop": true,
      "typeRoots": [
        "node_modules/@types",
        "ngChat/core"
      ]
    },
    
    "include": [
      "./config/default.json",
      "./bin/WWW",
      "**/*.ts",
      "ngChat/core/*.ts",
      "./src/**/*.ejs"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  